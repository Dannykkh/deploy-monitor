<Window x:Class="DeployMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Git Deploy Monitor"
        Height="650" Width="820"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        Icon="Assets/app.ico">

    <Window.Resources>
        <!-- 상태별 색상 -->
        <Style x:Key="StatusStyle" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Idle">
                    <Setter Property="Foreground" Value="Gray"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Checking">
                    <Setter Property="Foreground" Value="DodgerBlue"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Deploying">
                    <Setter Property="Foreground" Value="DodgerBlue"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Success">
                    <Setter Property="Foreground" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Error">
                    <Setter Property="Foreground" Value="Red"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="NotConfigured">
                    <Setter Property="Foreground" Value="DarkGray"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <!-- 설정 영역 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="저장소 폴더:" VerticalAlignment="Center" Margin="0,0,8,4"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding RepoFolder, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,4" Padding="4,3"/>
            <Button Grid.Row="0" Grid.Column="2" Content="찾기" Width="50" Command="{Binding BrowseRepoCommand}" Margin="0,0,0,4" Padding="4,3"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="배포 폴더:" VerticalAlignment="Center" Margin="0,0,8,4"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding DeployFolder, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,4" Padding="4,3"/>
            <Button Grid.Row="1" Grid.Column="2" Content="찾기" Width="50" Command="{Binding BrowseDeployCommand}" Margin="0,0,0,4" Padding="4,3"/>

            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="감시 주기:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox Text="{Binding IntervalSeconds, UpdateSourceTrigger=PropertyChanged}" Width="50" Padding="4,3" Margin="0,0,4,0"/>
                <TextBlock Text="초" VerticalAlignment="Center" Margin="0,0,16,0"/>
                <TextBlock Text="브랜치:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox Text="{Binding DefaultBranch, UpdateSourceTrigger=PropertyChanged}" Width="100" Padding="4,3"/>
            </StackPanel>
        </Grid>

        <!-- 버튼 영역 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,8">
            <Button Content="{Binding WatchButtonText}" Command="{Binding StartStopCommand}"
                    Width="100" Height="30" FontWeight="Bold" Margin="0,0,8,0"/>
            <Button Content="새로고침" Command="{Binding RefreshCommand}" Width="70" Height="30"/>
        </StackPanel>

        <!-- 구분선 -->
        <Separator Grid.Row="2" Margin="0,0,0,4"/>

        <!-- 프로젝트 목록 -->
        <DataGrid Grid.Row="3" ItemsSource="{Binding Projects}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal" AlternatingRowBackground="#F8F8F8"
                  CanUserResizeRows="False" CanUserReorderColumns="False"
                  BorderBrush="LightGray" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="프로젝트" Binding="{Binding Name}" Width="*" MinWidth="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="4,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="상태" Binding="{Binding StatusDisplay}" Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource StatusStyle}">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="4,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="마지막 배포" Binding="{Binding LastDeployTime}" Width="140">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="4,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="메시지" Binding="{Binding LastMessage}" Width="*" MinWidth="140">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Gray"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="4,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="배포"
                                    Command="{Binding DataContext.ManualDeployCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    IsEnabled="{Binding HasDeployBat}"
                                    Padding="8,2" Margin="2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 구분선 (리사이즈) -->
        <GridSplitter Grid.Row="4" HorizontalAlignment="Stretch" Height="5" Background="Transparent"/>

        <!-- 로그 영역 (탭) -->
        <TabControl Grid.Row="5" Margin="0,4,0,0" SelectionChanged="LogTabControl_SelectionChanged">
            <TabItem Header="감시 로그">
                <ListBox x:Name="WatchLogListBox" ItemsSource="{Binding WatchLogs}"
                         FontFamily="Consolas" FontSize="12"
                         BorderBrush="LightGray" BorderThickness="1"
                         VirtualizingStackPanel.IsVirtualizing="False"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </TabItem>
            <TabItem Header="배포 로그">
                <ListBox x:Name="DeployLogListBox" ItemsSource="{Binding DeployLogs}"
                         FontFamily="Consolas" FontSize="12"
                         BorderBrush="LightGray" BorderThickness="1"
                         VirtualizingStackPanel.IsVirtualizing="False"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
